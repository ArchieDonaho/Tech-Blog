{{> post-info post}}
{{! generate the comment textbox if the user is logged in }}
{{#if loggedIn}}
<article class="media">
  <form id="comment-form" class="media-content">
    <div class="field">
      <p class="control">
        <textarea name='comment-body' class="textarea" placeholder="Add a comment..."></textarea>
      </p>
    </div>
    <nav class="level">
      <div class="level-left">
        <div class="level-item">
          <button class="button  is-link" type='submit'>add comment</button>
        </div>
      </div>
    </nav>
  </form>
</article>
{{/if}}
{{!-- list all comments --}}
{{#if post.comments.length}}
<h1 class="title is-3">Comments</h1><br>
{{> comments post.comments}}
{{/if}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}
