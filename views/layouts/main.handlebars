<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>Your Tech Blog</title>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css'
    />
    <link
      rel='stylesheet'
      href='https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200'
    />
  </head>
  <body>
    <header>
      <nav class='navbar'>
        <div class='navbar-end'>
          <div class='navbar-item'>
            <div class='buttons'>
              <strong><a class='button is-link' href='/'>Home</a></strong>
              {{#if loggedIn}}
                <a class='button is-primary' href='/dashboard'>Dashboard</a>
                <button class='button is-light' id='logout'>Logout</button>
              {{else}}
                <a class='button is-primary' href='/signup'><strong>Sign up</strong></a>
                <a class='button is-light' href='/login'>Log in</a>
              {{/if}}
            </div>
          </div>
        </div>
      </nav>

      <section class='hero is-link'>
        <div class='hero-body'>
          <p class='Title is-1'>Your Tech Blog</p>
          <p class='Subtitle is-5'>
            For all your tech news
          </p>
        </div>
      </section>
    </header>
    <main class='container'>
      {{{body}}}
    </main>
    <footer></footer>
  </body>
  {{#if loggedIn}}
    <script src='/javascript/logout.js'></script>
  {{/if}}
</html>